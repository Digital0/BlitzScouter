@{
	ViewData["Title"] = "Team";
}
@model BlitzScouter.Models.BSTeam

@using (Html.BeginForm("Data", "Team", FormMethod.Post, new { onsubmit="toStr();" }))
{
	<input type="button" id="header" value="@Model.team" />
	<div id="content">

		@Html.HiddenFor(m => m.team)
		
		@Html.TextBoxFor(model => model.name, new { placeholder = "Team Name", id = "teamNum" })
		<div class="center">
			<div class="title">Round Data</div>
		</div>
		<div class="center">
			<table>
				<tr>
					<th>Average</th>
					@foreach (var a in Model.averages)
					{
						<td>@a</td>
					}
					<td>@Model.pitComments</td>
				</tr>
				<tr>
					<th>Round</th>
					@foreach (BlitzScouter.Models.Type t in BSConfig.components)
					{
						if (t.type == "checkbox")
						{
							<th>@t.title</th>
						}
					}

					@foreach (BlitzScouter.Models.Type t in BSConfig.components)
					{
						if (t.type == "counter")
						{
							<th>@t.title</th>
						}
					}
					<th>Comments</th>
				</tr>
				@foreach (var r in Model.rounds) {
					<tr>
						<th>@r.round</th>
						@foreach (bool checkbox in r.checkboxes) {
							<td>@checkbox</td>
						}
						@foreach (int counter in r.counters) {
							<td>@counter</td>
						}
						<td>@r.comments</td>
					</tr>
				}
			</table>
		</div>
		<div class="center">
			<div class="title">Pit Comments</div>
		</div>
		<div class="center">
			@Html.TextBoxFor(model => model.pitComments, new { id = "comments" })
		</div>
	</div>
	<input type="submit" id="footer" value="Update Team" />
}
