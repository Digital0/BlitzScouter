@{
	ViewData["Title"] = "Scout";
}
@model BlitzScouter.Models.BSTeam

@using (Html.BeginForm("Data", "Team", FormMethod.Post))
{
	<input type="button" id="header" value="@Model.team" />
	<div id="content">

		@Html.HiddenFor(m => m.team)
		
		@Html.TextBoxFor(model => model.name, new { placeholder = "Team Name", id = "teamNum" })
		<div class="center">
			<div class="title">Round Data</div>
		</div>
		<div class="center">
			<table>
				<tr>
					<th>Round</th>
					<th>Foul</th>
					<th>Broken</th>
					<th>Rocket Cargo</th>
					<th>Ship Cargo</th>
					<th>Rocket Hatch</th>
					<th>Ship Hatch</th>
					<th>End Hab</th>
				</tr>
				@foreach (var r in ViewBag.roundData) {
					<tr>
						<td>@r.round</td>
						<td>@r.checkbox3</td>
						<td>@r.checkbox4</td>
						<td>@r.counter1</td>
						<td>@r.counter2</td>
						<td>@r.counter3</td>
						<td>@r.counter4</td>
						<td>@r.counter5</td>
					</tr>
				}
			</table>
		</div>
		<div class="center">
			<div class="title">Pit Comments</div>
		</div>
		<div class="center">
			@Html.TextBoxFor(model => model.pitComments, new { id = "comments" })
		</div>
	</div>
	<input type="submit" id="footer" value="Update Team" />
}
