@{
	ViewData["Title"] = "Blitz Scouter";
}

@model BSMatch

<form action="/Dash/Round/" method="get" class="top-elem">
	<div class="form-group">
		<input type="number" class="form-control" id="roundnum" name="roundnum" placeholder="Round Number" />
	</div>
	<button type="submit" class="btn btn-primary">Lookup</button>
</form>
<h1 class="border-bottom">@(Model.matchStr)</h1>
<div>
	<h3>Blue Alliance</h3>
	<table class="table table-striped table-sm">
		<tr>
			<th>Team</th>
			@foreach (BlitzScouter.Models.Component t in BSConfig.c.matchScout)
			{
				if (t.type == "checkbox")
				{
					<th>@t.text</th>
				}
			}

			@foreach (BlitzScouter.Models.Component t in BSConfig.c.matchScout)
			{
				if (t.type == "counter")
				{
					<th>@t.text</th>
				}
			}
			<th>Comments</th>
		</tr>
		@for (var i = 0; i < Model.blue.Count; i++)
		{
			<tr>
				<td><a href="/dash/team/?teamnum=@(Model.blue[i].team)" style="vertical-align:middle;">@Model.blue[i].team</a></td>
				@foreach (var a in Model.blue[i].checkboxAverages)
				{
					<td>@(a * 100)%</td>
				}
				@foreach (var a in Model.blue[i].counterAverages)
				{
					<td>@a</td>
				}

				@if (Model.blue[i].rounds.Count > 0)
				{
					<td>@Model.blue[i].pitComments</td>
				}
			</tr>
		}
	</table>

	<h3>Red Alliance</h3>
	<table class="table table-striped table-sm">
		<tr>
			<th>Team</th>
			@foreach (BlitzScouter.Models.Component t in BSConfig.c.matchScout)
			{
				if (t.type == "checkbox")
				{
					<th>@t.text</th>
				}
			}

			@foreach (BlitzScouter.Models.Component t in BSConfig.c.matchScout)
			{
				if (t.type == "counter")
				{
					<th>@t.text</th>
				}
			}
			<th>Comments</th>
		</tr>
		@for (var i = 0; i < Model.red.Count; i++)
		{
	<tr>
		@if (Model.red[i].team == BSConfig.c.teamnum)
		{
			<td><a href="/dash/team/?teamnum=@(Model.red[i].team)" style="vertical-align:middle;font-weight:bold;text-decoration: underline;">@Model.red[i].team</a></td>
		}
		else
		{
			<td><a href="/dash/team/?teamnum=@(Model.red[i].team)" style="vertical-align:middle;">@Model.red[i].team</a></td>
		}
		@foreach (var a in Model.red[i].checkboxAverages)
		{
			<td>@(a * 100)%</td>
		}
		@foreach (var a in Model.red[i].counterAverages)
		{
			<td>@a</td>
		}
		@if (Model.red[i].rounds.Count > 0)
		{
			<td>@Model.red[i].pitComments</td>
		}
	</tr>
		}
	</table>
</div>