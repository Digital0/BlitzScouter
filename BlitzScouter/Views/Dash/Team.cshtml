@{
	ViewData["Title"] = "Blitz Scouter";
}

@model BSTeam

@if (Model == null)
{
	<h1 class="top-elem">Invalid Team</h1>
}
else
{
	<form action="/Dash/Team/" method="get" class="top-elem">
		<div class="form-group">
			<input type="number" class="form-control" id="teamnum" name="teamnum" placeholder="Team Number" />
		</div>
		<button type="submit" class="btn btn-primary">Lookup</button>
	</form>
	switch (ViewBag.code)
	{
		case 1:
			<div class="alert alert-success" role="alert">
				Team has been updated!
			</div>
			break;
	}
	<h1 class="border-bottom">@Model.team</h1>
	<form action="/Dash/Team/" method="post">
		<input type="hidden" id="teamnum" name="teamnum" value="@(Model.team)" />
		<div class="form-group">
			<label for="teamname">Team Name</label>
			<input type="text" class="form-control" id="teamname" name="teamname" placeholder="Team Name" value="@Model.name">
		</div>
		<div class="form-group">
			<label for="comments">Comments</label>
			<input type="text" class="form-control" id="comments" name="comments" placeholder="Comments" value="@Model.pitComments">
		</div>
		<button type="submit" class="btn btn-primary">Save Data</button>
	</form>
	<h3>Previous Rounds</h3>
	<div>
		<table class="table table-striped table-sm">
			<tr>
				<th>Average</th>
				@foreach (var a in Model.checkboxAverages)
				{
					<td>@(a * 100)%</td>
				}
				@foreach (var a in Model.counterAverages)
				{
					<td>@a</td>
				}
				<td>@Model.pitComments</td>
			</tr>
			<tr>
				<th>Round</th>
				@foreach (BlitzScouter.Models.Component t in BSConfig.c.matchScout)
				{
					if (t.type == "checkbox")
					{
						<th>@t.text</th>
					}
				}

				@foreach (BlitzScouter.Models.Component t in BSConfig.c.matchScout)
				{
					if (t.type == "counter")
					{
						<th>@t.text</th>
					}
				}
				<th>Comments</th>
			</tr>
			@foreach (var r in Model.rounds)
			{
				<tr>
					<td>@r.round</td>
					@foreach (bool checkbox in r.checkboxes)
					{
						if (checkbox)
						{
							<td>@checkbox</td>
						}
						else
						{
							<td>@checkbox</td>
						}
					}
					@foreach (int counter in r.counters)
					{
						<td>@counter</td>
					}
					<td>@r.comments</td>
				</tr>
			}
		</table>
	</div>
}