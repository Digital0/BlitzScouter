@{
	ViewData["Title"] = "Scout";
}
@model BlitzScouter.Models.BSTeamMod

@using (Html.BeginForm("Team", "Main", FormMethod.Post))
{
<div id="content">
	@Html.HiddenFor(m => m.prevTeam)
	<div class="center">
		@Html.TextBoxFor(model => model.team.team, new { placeholder = "Team Number", id = "teamNum", required = string.Empty, type = "number" })
	</div>
	<div class="center">
		@Html.TextBoxFor(model => model.team.name, new { placeholder = "Team Name", id = "teamNum" })
	</div>
	<div class="center">
		<div class="title">Round Data</div>
	</div>
	<div class="center">
		<div class="counterDsp">Normally there would be round data here, but I don't feel like grabbing it today. Come back in like...well...whenever you hit refresh next, alright?</div>
	</div>
	<div class="center">
		<div class="title">Pit Comments</div>
	</div>
	<div class="center">
		@Html.TextBoxFor(model => model.team.pitComments, new { id = "comments" })
	</div>
</div>
	<input type="submit" id="footer" value="Update Team" />
}
