@{
	ViewData["Title"] = "Match Lookup";
}

@model List<BlitzScouter.Models.BSTeam>

	<table id="sortable">
		<tr>
			<th>Team</th>
			@{
				int c = 0;
				for (int i = 0; i < BSConfig.c.matchScout.Count; i++)
				{
					if (BSConfig.c.matchScout[i].type == "checkbox")
					{
					<th><button style="background:none; font-size:20px;" onclick="sort(@(c));">@BSConfig.c.matchScout[i].text</button></th>
					c++;
					}
				}

				for (int i = 0; i < BSConfig.c.matchScout.Count; i++)
				{
					if (BSConfig.c.matchScout[i].type == "counter")
					{
					<th><button style="background:none; font-size:20px;" onclick="sort(@(c));">@BSConfig.c.matchScout[i].text</button></th>
					c++;
					}
				}
			}
			<th>Comments</th>
		</tr>
		@foreach (BSTeam tm in Model)
		{
			<tr>
				<th id="@(tm.team)"><button style="background:none; font-size:20px;" onclick="toggleColor(@(tm.team));">@tm.team</button><h4>@tm.name</h4></th>
				@foreach (var a in tm.checkboxAverages)
				{
					<td style="font-size:@(Math.Round(6 + a*20))px;">@(a * 100)%</td>
				}
				@foreach (var a in tm.counterAverages)
				{
					<td>@a</td>
				}

				@if (tm.rounds.Count > 0)
				{
					<td>@tm.pitComments</td>
				}
			</tr>
		}
	</table>